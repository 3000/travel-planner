!!! 5
%html(lang="en" ng-app='travel')
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= t('.pagetitle', page: (yield(:title) if content_for?(:title))  )
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag 'http://html5shim.googlecode.com/svn/trunk/html5.js'
    = stylesheet_link_tag 'main', media: 'all'
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.4.1/bootstrap-select.min.css', media: 'all'
    = stylesheet_link_tag 'https://s3.amazonaws.com/altmer-cdn/datetimepicker-angularjs/datetimepicker.css', media: 'all'
    = stylesheet_link_tag 'https://s3.amazonaws.com/altmer-cdn/map-icons/css/map-icons.css', media: 'all'
    = yield(:page_stylesheet) if content_for?(:page_stylesheet)

  %body

    = render 'layouts/partials/navbar'

    %div{class: 'container'}
      = render 'layouts/partials/flash_messages'
      = yield

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag 'main'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.4.1/bootstrap-select.min.js'
    = javascript_include_tag 'https://code.angularjs.org/1.2.16/i18n/angular-locale_ru.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/moment.js/2.6.0/moment-with-langs.min.js'
    = javascript_include_tag 'https://s3.amazonaws.com/altmer-cdn/datetimepicker-angularjs/datetimepicker.js'
    = javascript_include_tag 'https://s3.amazonaws.com/altmer-cdn/ui-sortable/sortable.js'
    = yield(:page_javascript) if content_for?(:page_javascript)
