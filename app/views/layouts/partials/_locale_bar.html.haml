    %img{src: "https://dta3uun7xyqia.cloudfront.net/images/flags/#{I18n.locale == :ru ? 'RUS' : 'GBR'}_flag.png", class: 'flag-small', style: 'margin-right: 10px;'}
    %b{class: 'caret'}
  %ul{class: 'dropdown-menu'}
    %li
      = link_to locale: 'ru' do
        %img{src: 'https://dta3uun7xyqia.cloudfront.net/images/flags/RUS_flag.png', class: 'flag-small', style: 'margin-right: 10px;'}
        Русский
    %li
      = link_to locale: 'en' do
        %img{src: 'https://dta3uun7xyqia.cloudfront.net/images/flags/GBR_flag.png', class: 'flag-small', style: 'margin-right: 10px;'}
        English
