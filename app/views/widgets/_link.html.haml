- ng_model_descr ||= ''
- ng_model_url ||= ''

%div{class: 'form-group'}
  %div{class: 'col-md-6'}
    = text_field_tag 'link_descr', '', 'ng-model' => ng_model_descr, class: 'input-sm form-control', placeholder: t('common.link_text')
  %div{class: 'col-md-6'}
    = text_field_tag 'link_url', '', 'ng-model' => ng_model_url, class: 'input-sm form-control', placeholder: 'http://'
