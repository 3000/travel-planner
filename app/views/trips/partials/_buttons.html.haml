.btn-toolbar
  %a.btn.btn-info.pull-right.btn-sm{href: 'javascript:void(0);', 'ng-click' => 'downloadWord()'}
    = fa_icon 'file-word-o', text: t('trips.show.download_word')

  - if user_signed_in? and @trip.include_user(current_user)
    %a{href: 'javascript:void(0);', 'ng-click' => 'setEdit(true)',
        class: 'btn btn-primary pull-right btn-sm', 'ng-show' => '!edit'}
      = fa_icon 'edit', text: t('trips.show.edit_plan')
    %a{href: 'javascript:void(0);', 'ng-click' => 'setEdit(false)',
        class: 'btn btn-primary pull-right btn-sm', 'ng-show' => 'edit'}
      = fa_icon 'eye', text: t('trips.show.show_plan')

    %a{href: 'javascript:void(0);', 'ng-click' => 'savePlan()',
        class: 'btn btn-success pull-right btn-sm', 'ng-show' => '!saving'}
      = fa_icon 'save', text: t('trips.show.save_plan')
    .btn.btn-success.pull-right.btn-sm{'ng-show' => 'saving'}
      %i.fa.fa-spinner.fa-spin
      = t('trips.show.saving_plan')
